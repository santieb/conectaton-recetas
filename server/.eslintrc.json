{
    "env": {
      "es2021": true
    },
    "extends": [
      "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "quotes": ["error", "single"], // Agrega esta regla para comillas simples
      "semi": ["error", "always"],
      "space-before-function-paren": "off",
      "spaced-comment": "off",

      // "comma-dangle": ["error", "always"],
      "comma-dangle": "off"
      // or
      /* "comma-dangle": ["error", {
          "arrays": "never",
          "objects": "never",
          "imports": "never",
          "exports": "never",
          "functions": "never"
      }]
 */

    }
  }