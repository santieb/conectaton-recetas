{
    "env": {
      "es2021": true
    },
    "extends": [
      "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "quotes": ["error", "single"], // Agrega esta regla para comillas simples
      "semi": ["error", "always"]
    }
  }